                </ul>
                <ul class="support">
                    @*<li class="#"><a href="#"><label> </label></a></li>*@
                    <li><a href="/lien-he.html"><span class="live"><i class="fa fa-phone-square"></i> Liên hệ</span></a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="/"><img src="../../Assets/client/images/logo1.png" alt="" /></a>
                </div>
                <div class="search">
                    <form method="get" action="/tim-kiem.html">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Tên sản phẩm" />
