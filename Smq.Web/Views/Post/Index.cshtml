@using Smq.Web.Models
@using System;
@model Smq.Web.Infrastructure.Core.PaginationSet<PostViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    var postCategory = (PostCategoryViewModel)ViewBag.PostCategory ?? new PostCategoryViewModel();
}
<div class="women-product">
    <h2>@postCategory.Name</h2>
    @if (Model.Count > 0)
    {
        foreach (var item in Model.Items)
        {
            <div class="col-md-12 show-article">
                <div class="elit-grid-articel">
                    <h4><b>@item.Name</b></h4>
                    <label>@item.Description</label>
                    @Html.Raw(item.Content)
                    <div class="time-article">Đăng lúc: @String.Format("{0:dd-MM-yyyy HH:mm}", item.CreatedDate)</div>
                </div>
                <img class="img-responsive shoe-left" src="@item.Image" alt="" width="" height="163" />
                <div class="clearfix"> </div>
            </div>
        }
        <div class="post-tag">
            Tags:
            <ul class="taglist">
                @foreach (var tag in (IEnumerable<TagViewModel>)ViewBag.PostTags)
                {
                  <li><a href="/tagbaiviet/@(tag.ID).html" class="label label-info"> @(tag.Name) </a></li>
                }
            </ul>

        </div>
        if (Model.TotalPages > 1)
        {
            var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
            var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.Page > 1)
                    {
                        <li>
                            <a href="?page=1" aria-label="First">
                                <i class="fa fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@(Model.Page - 1)" aria-label="Previous">
                                <i class="fa fa-angle-double-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="?page=@i" title="Trang @i">@i</a></li>
                        }
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li>
                            <a href="?page=@(Model.Page + 1)" aria-label="First">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@Model.TotalPages" aria-label="Previous">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
         }
    }
    else
    {
            <div class="text-center">Không có sản phẩm nào được tìm thấy</div>
    }
</div>

